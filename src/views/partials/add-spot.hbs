<form class="box" action="/swimlist/{{swimlist._id}}/addspot" method="POST">
  <label class="label">Enter Swim Spot Details</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input is-rounded" type="text" placeholder="Name" name="name">
      </div>
      <div class="field">
        <input class="input is-rounded" type="text" placeholder="County" name="county">
      </div>
      <div class="field">
        <input class="input is-rounded" type="text" placeholder="Latitude" name="latitude">
      </div>
      <div class="field">
        <input class="input is-rounded" type="text" placeholder="Longitude" name="longitude">
      </div>
      <div class="field">
        <div class="control">
          <div class="select is-rounded is-hoverable">
            <select name="categorey" required>
              <option value="" disabled selected>Select Body of Water</option>
              <option value="The Sea">The Sea</option>
              <option value="Rivers">Rivers</option>
              <option value="Waterfalls">Waterfalls</option>
              <option value="Loughs">Loughs</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
  <button class="button is-primary is-rounded">Add Spot</button>
</form>